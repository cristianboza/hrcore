{
  "realm": "hrcore",
  "enabled": true,
  "displayName": "HR Core Realm",
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": false,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  "roles": {
    "realm": [
      {
        "name": "SUPER_ADMIN",
        "description": "System administrator with full access"
      },
      {
        "name": "MANAGER",
        "description": "Manager with access to all employee profiles and absence approvals"
      },
      {
        "name": "EMPLOYEE",
        "description": "Employee who can manage own profile and request absences"
      },
      {
        "name": "user",
        "description": "Default user role"
      }
    ]
  },
  "defaultDefaultClientScopes": [
    "web-origins",
    "role_list",
    "profile",
    "email"
  ],
  "clients": [
    {
      "clientId": "hrcore-app",
      "name": "HR Core App",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "hrcore-app-secret",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:3000/auth/callback",
        "http://localhost:3000/login",
        "http://localhost:3000/",
        "http://localhost:8080/login/oauth2/code/keycloak"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:8080"
      ],
      "bearerOnly": false,
      "consentRequired": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "publicClient": false,
      "frontchannelLogout": false,
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:3000"
      },
      "defaultClientScopes": [
        "web-origins",
        "role_list",
        "profile",
        "email",
        "roles"
      ],
      "optionalClientScopes": [
        "microprofile-jwt"
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@hrcore.com",
